.message= locals[:message]

%p
  What is this word in
  = locals[:translate_for].capitalize + "?"

%h1
  .challenge
    %em= locals[:word]

%form.inquisition{ :action => "/", :method => "POST" }
  %input.guess{ :type =>"text", :autocomplete => "off", :name => "answer", :id => "answer" }
  %input{ :type => "hidden", :name => "type", :value => "#{locals[:type]}"}
  %input{ :type => "hidden", :name => "word", :value => "#{locals[:word]}" }
  %input{ :type => "hidden", :name => "language", :value => "#{locals[:language]}" }
  %input.points_for_word{ :type => "hidden", :name => "points", :value => "#{locals[:points]}" }
  %input.button{ :type => "submit", :value => "Answer" }

.hints
  .onoff [x] hide
  %p I am a relevant hint

